@model List<Products>

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Danh mục sản phẩm hiện có</h1>


    <form asp-controller="Home" asp-action="SearchByName" method="get" class="row g-4 mb-3">
        <input type="text" name="keyword" class="form-control" placeholder="Nhập tên sản phẩm..." />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>


    <div class="container mt-4">
        <div class="row g-4">
            @{
                if (@Model.Any())
                {
                    @foreach (var prod in Model)
                    {
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="card h-100">
                                <img src="https://yishop.com.vn/wp-content/uploads/2022/05/36.6.jpg" class="card-img-top" alt="@prod.ProductName">
                                <div class="card-body h-100">
                                    <h5 class="card-title">@prod.ProductName</h5>
                                    <p class="card-text">@prod.Description</p>
                                    <p class="card-text"><strong>Giá:</strong> @((int)prod.Price) ₫</p>
                                </div>
                                <div class="card-footer">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@prod.ProductID" class="btn btn-primary">Chi tiết</a>
                                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@prod.ProductID" class="btn btn-warning">Sửa</a>
                                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@prod.ProductID" class="btn btn-danger">Xoá</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Không có sản phẩm nào!</p>
                }
            }
        </div>
    </div>
</div>

